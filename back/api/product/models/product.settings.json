{
  "kind": "collectionType",
  "connection": "default",
  "collectionName": "products",
  "info": {
    "name": "Product"
  },
  "options": {
    "increments": true,
    "timestamps": true
  },
  "attributes": {
    "name": {
      "type": "string"
    },
    "description": {
      "type": "string"
    },
    "image": {
      "collection": "file",
      "via": "related",
      "plugin": "upload",
      "required": false
    },
    "price": {
      "type": "float"
    },
    "shop": {
      "model": "shop",
      "via": "products"
    },
    "category": {
      "model": "category"
    },
    "target": {
      "type": "enumeration",
      "enum": [
        "man",
        "woman",
        "unisex",
        "kid",
        "all"
      ]
    },
    "stock": {
      "type": "integer",
      "min": 0,
      "required": true,
      "default": 0
    },
    "stock_infinite": {
      "type": "boolean",
      "default": true,
      "required": true
    }
  }
}
