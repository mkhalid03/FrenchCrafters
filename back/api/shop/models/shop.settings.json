{
  "kind": "collectionType",
  "connection": "default",
  "collectionName": "shops",
  "info": {
    "name": "Shop"
  },
  "options": {
    "increments": true,
    "timestamps": true
  },
  "attributes": {
    "name": {
      "type": "string"
    },
    "description": {
      "type": "richtext"
    },
    "image": {
      "collection": "file",
      "via": "related",
      "plugin": "upload",
      "required": false
    },
    "products": {
      "via": "shop",
      "collection": "product"
    },
    "tags": {
      "type": "component",
      "repeatable": true,
      "component": "shop.tags"
    }
  }
}
