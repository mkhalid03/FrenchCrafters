{
  "kind": "collectionType",
  "connection": "default",
  "collectionName": "shops",
  "info": {
    "name": "Shop"
  },
  "options": {
    "increments": true,
    "timestamps": true
  },
  "attributes": {
    "name": {
      "type": "string"
    },
    "description": {
      "type": "richtext"
    },
    "image": {
      "collection": "file",
      "via": "related",
      "plugin": "upload",
      "required": false
    },
    "products": {
      "collection": "product",
      "via": "shop"
    },
    "tags": {
      "type": "component",
      "repeatable": true,
      "component": "shop.tags"
    },
    "tax": {
      "private": true,
      "type": "integer",
      "required": false,
      "min": 0,
      "max": 100,
      "default": 10
    },
    "shop_orders": {
      "collection": "shop-order",
      "via": "shop"
    },
    "owner": {
      "type": "string",
      "private": true,
      "required": true,
      "unique": true
    }
  }
}
