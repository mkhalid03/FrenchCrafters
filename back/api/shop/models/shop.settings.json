{
  "kind": "collectionType",
  "connection": "default",
  "collectionName": "shops",
  "info": {
    "name": "Shop"
  },
  "options": {
    "increments": true,
    "timestamps": true
  },
  "attributes": {
    "name": {
      "type": "string"
    },
    "description": {
      "type": "richtext"
    },
    "image": {
      "collection": "file",
      "via": "related",
      "plugin": "upload",
      "required": false
    },
    "products": {
      "collection": "product",
      "via": "shop"
    },
    "tags": {
      "type": "component",
      "repeatable": true,
      "component": "shop.tags"
    },
    "user": {
      "columnName": "owner",
      "plugin": "users-permissions",
      "model": "user",
      "via": "shops"
    },
    "taxe": {
      "private": true,
      "type": "integer",
      "required": true,
      "min": 0,
      "max": 100
    },
    "shop_orders": {
      "via": "shop",
      "collection": "shop-order"
    }
  }
}
